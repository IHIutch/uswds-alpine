  <form class="max-w-xs">
    <fieldset>
      <legend class="leading-snug max-w-56 mb-3">Select any historical figure</legend>
      <div class="space-y-2">
      {% for checkbox in checkboxes %}
        {% set checkbox_id = 'checkbox-' ~ random() %}
        <div class="flex items-center">
          <input {{ checkbox.isDisabled == true ? 'disabled' : null }} id="{{ checkbox_id }}" type="checkbox" value="{{ checkbox.value }}" class="peer cursor-pointer text-blue-60v border-none h-5 w-5 rounded-sm ring-2 ring-offset-0 ring-gray-90 focus:ring-2 focus:ring-offset-0 focus:ring-gray-90 focus:outline focus:outline-4 focus:outline-offset-4 focus:outline-blue-40v disabled:ring-gray-50 disabled:cursor-not-allowed disabled:checked:text-gray-50 checked:ring-blue-60v focus:checked:ring-blue-60v" />
          <label for="{{ checkbox_id }}" class="pl-3 cursor-pointer block peer-disabled:text-gray-60 peer-disabled:cursor-not-allowed">{{ checkbox.label }}</label>
        </div>
      {% endfor %}
      </div>
    </fieldset>
  </form>
