<div class="space-y-12">

  <div class="max-w-xs">
    <label for="prefix" class="block">Credit card number</label>
    <div class="mt-2 relative flex items-center">
      <div
        aria-hidden="true"
        class="select-none pointer-events-none absolute left-0 whitespace-nowrap px-2 text-gray-50 flex items-center"
      >
        <div class="icon-[material-symbols--credit-card-outline] h-6 w-6"></div>
      </div>
      <input
        id="prefix"
        class="p-2 pl-10 bg-transparent w-full focus:border-gray-60 border-gray-60 focus:outline focus:outline-offset-0 focus:outline-4 focus:outline-blue-40v data-[invalid]:border-4 data-[invalid]:border-red-60v"
      />
    </div>
  </div>

  <div class="max-w-xs">
    <label for="prefix-error" class="block">Credit card number (Error)</label>
    <div class="mt-2 relative flex items-center">
      <div
        aria-hidden="true"
        class="select-none pointer-events-none absolute left-0 whitespace-nowrap px-2 text-gray-50 flex items-center"
      >
        <div class="icon-[material-symbols--credit-card-outline] h-6 w-6"></div>
      </div>
      <input
        id="prefix-error"
        class="p-2 pl-10 bg-transparent w-full focus:border-gray-60 border-gray-60 focus:outline focus:outline-offset-0 focus:outline-4 focus:outline-blue-40v data-[invalid]:border-4 data-[invalid]:border-red-60v"
        data-invalid="true"
      />
    </div>
  </div>

  <div class="max-w-xs">
    <label for="suffix" class="block">Weight, in pounds</label>
    <div class="mt-2 relative flex items-center w-28">
      <input
        id="suffix"
        class="p-2 pr-10 bg-transparent w-full focus:border-gray-60 border-gray-60 focus:outline focus:outline-offset-0 focus:outline-4 focus:outline-blue-40v data-[invalid]:border-4 data-[invalid]:border-red-60v"
      />
      <div
        aria-hidden="true"
        class="select-none pointer-events-none absolute right-0 whitespace-nowrap px-2 text-gray-50"
      >lbs.</div>
    </div>
  </div>

</div>
