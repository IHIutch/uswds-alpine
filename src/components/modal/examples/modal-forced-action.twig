<div x-data="{
  isOpen: false,
  id: $id('modal-title')
}">

  <button
    class="rounded font-bold leading-none text-white px-5 py-3 bg-blue-60v hover:bg-blue-warm-70v active:bg-blue-warm-80v focus:outline focus:outline-4 focus:outline-offset-4 focus:outline-blue-40v"
    @click="isOpen = true"
    >Open modal with forced action</button>

    <div
      class="fixed inset-0 overflow-y-auto"
      role="dialog"
      :aria-labelledby="$id('modal-title')"
      aria-modal="true"
      x-show="isOpen"
      >
        {# Backdrop #}
        <div
          x-show="isOpen"
          x-transition.opacity
          x-transition:leave.duration.0ms
          class="fixed inset-0 bg-black/70"
          aria-hidden="true"
          ></div>

        {# Modal #}
        <div
          x-show="isOpen"
          x-transition
          x-transition:leave.duration.0ms
          class="relative flex min-h-screen items-center justify-center p-4"
          >
            <div
              @click.stop
              x-trap.noscroll.inert="isOpen"
              class="relative w-full max-w-lg rounded-lg bg-white p-8 pt-10 shadow-lg"
              >
              <h2 class="text-xl font-bold font-merriweather" :id="$id('modal-title')">Your session will end soon.</h2>
              <div class="mt-4">
                <p class="mt-2 text-gray-600">You’ve been inactive for too long. Please choose to stay signed in or sign out. Otherwise, you’ll be signed out automatically in 5 minutes.</p>
              </div>
              <div class="mt-6">
                <ul class="flex max-mobile-lg:flex-col max-mobile-lg:space-y-2 mobile-lg:space-x-2">
                  <li class="flex">
                    <button type="button"
                      @click="isOpen = false"
                      class="rounded font-bold leading-none text-white px-5 py-3 bg-blue-60v hover:bg-blue-warm-70v active:bg-blue-warm-80v focus:outline focus:outline-4 focus:outline-offset-4 focus:outline-blue-40v"
                      >Yes, stay signed in</button>
                  </li>
                  <li class="flex">
                    <button type="button"
                      @click="isOpen = false"
                      class="p-3 underline leading-none text-blue-60v bg-transparent hover:text-blue-warm-70v active:text-blue-warm-80v focus:outline focus:outline-4 focus:outline-offset-4 focus:outline-blue-40v"
                      >Sign out</button>
                  </li>
                </ul>
              </div>
            </div>
        </div>
    </div>

</div>
