<div class="p-4">
  <div
    x-data="{
        activeAccordion: '',
        setActiveAccordion(id) {
        this.activeAccordion = (this.activeAccordion == id) ? '' : id
        }
      }"
    class="space-y-2"
  >
    {% for accordion in accordions %}
    <div x-data="{ id: $id('accordion') }" class="">
      <h4 class="font-source-sans-pro relative">
        <button
          @click="setActiveAccordion(id)"
          class="flex items-center w-full py-4 px-5 bg-gray-5 hover:bg-gray-10 font-bold focus:outline focus-within:outline-4 focus-within:outline-blue-40v cursor-pointer"
          :aria-controls="id"
          :aria-expanded="activeAccordion==id"
        >
          {{ accordion.title }}
        </button>
        <div class="h-full absolute flex items-center top-0 right-5">
          <span
            class="material-symbols-outlined"
            x-show="activeAccordion!=id"
            x-cloak=""
            >add</span
          >
          <span
            class="material-symbols-outlined"
            x-show="activeAccordion==id"
            x-cloak=""
            >remove</span
          >
        </div>
      </h4>
      <div :id="id" class="py-6 px-4" x-show="activeAccordion==id" x-cloak>
        <p class="font-source-sans-pro leading-normal max-w-prose">
          {{ accordion.content }}
        </p>
      </div>
    </div>

    {% endfor %}
  </div>
</div>

{% endblock %}
